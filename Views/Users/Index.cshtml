@model IEnumerable<Users>
@{
    ViewData["Title"] = "Users";
}
 

<div class="container my-4">

    <div class="row">

        <div class="col-12">
            <div class="row">
                <div class="col-6"><h1>Users List</h1></div> 
            </div>
        </div>
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                        </tr>
                    } 
                </tbody>
            </table>
        </div>
    </div>
</div>

